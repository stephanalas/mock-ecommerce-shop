{
	"lock": false,
	"tasks": {
		"start": "deno run -A --watch=static/,routes/ dev.ts",
		"db:push": "deno run -A npm:prisma@^4.5 db push && deno run -A --unstable npm:prisma@^4.5 generate --data-proxy"
	},
	"importMap": "./import_map.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
