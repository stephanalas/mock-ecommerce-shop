// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["deno"]
  output = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dinosaur {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String
}

// mock store models


model User {
  id  Int @id @default(autoincrement())
  username String @unique
  email String @unique
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Product {
  id Int @id @default(autoincrement())
  name String 
  description String?
  price Float
}

// cart_product through table
model CartItem {
  id Int @id @default(autoincrement())
  ProductId Int @unique
  CartId Int @unique

}

model Cart {
  id Int @id @default(autoincrement())
  CartItems CartItem[]
}